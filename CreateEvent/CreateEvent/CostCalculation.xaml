        <TextBlock Height="23" HorizontalAlignment="Left" Margin="256,132,0,0" Name="centerTextBlock" Text="0.00" VerticalAlignment="Top" Width="120" Foreground="#FFDFE874" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="256,190,0,0" Name="discountTextBox" Text="0.00" VerticalAlignment="Top" Width="120" Foreground="#FFDBE564" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="256,397,0,0" Name="totalCostTextBlock" Text="0.00" VerticalAlignment="Top" Width="120" Foreground="#FFE7F266" />
