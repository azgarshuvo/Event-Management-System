        <TextBox x:Name="Name_TextBox" HorizontalAlignment="Left" Height="26" Margin="176,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Background="#FFE8E1E1" />
        <TextBox x:Name="Contact_Number_TextBox" HorizontalAlignment="Left" Height="26" Margin="176,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Background="#FFE8E1E1" />
        <TextBox x:Name="Email_TextBox" HorizontalAlignment="Left" Height="26" Margin="176,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Background="#FFE8E1E1" />
        <TextBox x:Name="Address_TextBox" HorizontalAlignment="Left" Height="45" Margin="29,227,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="337" Background="#FFE8E1E1" />
        <Separator HorizontalAlignment="Left" Height="7" Margin="29,292,0,0" VerticalAlignment="Top" Width="364"/>
        <Label x:Name="label2_Copy3" Content="Event Date:" HorizontalAlignment="Left" Height="30" Margin="29,316,0,0" VerticalAlignment="Top" Width="125" Foreground="#FFF5F0F0" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="label2_Copy4" Content="Start Time:" HorizontalAlignment="Left" Height="30" Margin="29,370,0,0" VerticalAlignment="Top" Width="125" Foreground="#FFF5F0F0" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="Event_Time_TextBox" HorizontalAlignment="Left" Height="26" Margin="176,320,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Background="#FFE8E1E1" />
        <TextBox x:Name="Start_Time_TextBox" HorizontalAlignment="Left" Height="26" Margin="176,370,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Background="#FFE8E1E1" />
        <Separator HorizontalAlignment="Left" Height="7" Margin="29,420,0,0" VerticalAlignment="Top" Width="364"/>
        <Label x:Name="label2_Copy5" Content="Advance Pay:" HorizontalAlignment="Left" Height="30" Margin="29,444,0,0" VerticalAlignment="Top" Width="125" Foreground="#FFF5F0F0" FontWeight="Bold" FontSize="14" RenderTransformOrigin="0.496,1.933"/>
        <TextBox x:Name="Advance_Pay_TextBox" HorizontalAlignment="Left" Height="26" Margin="176,444,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Background="#FFE8E1E1" />
        <Separator HorizontalAlignment="Left" Height="7" Margin="29,492,0,0" VerticalAlignment="Top" Width="364"/>
        <Button x:Name="Confirm_Button" Content="CONFIRM" HorizontalAlignment="Left" Height="28" Margin="253,508,0,0" VerticalAlignment="Top" Width="83" Background="#FFCDC6C6" FontSize="14" FontWeight="Bold" Foreground="#FF58811D"/>
        <Button x:Name="Cancel_Button" Content="Cancel" HorizontalAlignment="Left" Height="28" Margin="96,508,0,0" VerticalAlignment="Top" Width="94" Background="#FFD3CCCC" Foreground="#FFF31C1C" FontWeight="Bold" FontSize="14"/>

    </Grid>
</Window>
