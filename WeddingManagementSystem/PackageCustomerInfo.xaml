        <Separator HorizontalAlignment="Left" Height="0" Margin="0,66,0,0" VerticalAlignment="Top" Width="422"/>
        <Separator HorizontalAlignment="Left" Height="0" Margin="10,66,0,0" VerticalAlignment="Top" Width="412"/>
        <Separator HorizontalAlignment="Left" Height="7" Margin="29,51,0,0" VerticalAlignment="Top" Width="364"/>
        <Label x:Name="label2" Content="Name:" HorizontalAlignment="Left" Height="30" Margin="29,87,0,0" VerticalAlignment="Top" Width="125" Foreground="#FFF5F0F0" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="label2_Copy" Content="Contact Number:" HorizontalAlignment="Left" Height="30" Margin="29,122,0,0" VerticalAlignment="Top" Width="125" Foreground="#FFF5F0F0" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="label2_Copy1" Content="Email:" HorizontalAlignment="Left" Height="30" Margin="29,157,0,0" VerticalAlignment="Top" Width="125" Foreground="#FFF5F0F0" FontWeight="Bold" FontSize="14"/>
