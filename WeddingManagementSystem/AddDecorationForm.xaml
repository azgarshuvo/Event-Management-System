        <TextBlock FontFamily="Times New Roman" FontSize="30" FontStyle="Normal" FontWeight="Bold" Foreground="#FF56ABBA" Height="33" HorizontalAlignment="Left" Margin="125,19,0,0" x:Name="textBlock1" Text="Decoration:" VerticalAlignment="Top" Width="205" />
        <Border Background="#FF454583" BorderBrush="Silver" BorderThickness="1" Height="4" x:Name="border2" Width="351" Margin="35,69,36,473" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="35,125,0,0" x:Name="textBlock2" Text="Item                      :" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16" Foreground="#FF92F2A9" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="35,174,0,0" x:Name="textBlock2_Copy" Text="Type                      :" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16" Foreground="#FF92F2A9" />
